  /*background:url(/image/icon-add.png)  no-repeat center center / 60% auto ;*/
}

.icon-add image {
  width:100%;
  height:100%;
  padding-left: 15rpx;
}

.scrollo-view{
  overflow:hidden;
}



.icon-before{
  position:absolute;
  left:0;
  top:25rpx;
  background:#cb5858;
  height:44rpx;
  line-height:44rpx;
  padding:0 10rpx;
  color:white;
  font-size:24rpx;
  z-index:2;
}
.icon-before:after{
  content: "";
  position: absolute;
  right: -39rpx;
  border: 23rpx solid #cb5858;
  border-right-color: transparent;
  line-height: normal;
}

